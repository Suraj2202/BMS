<Window x:Class="BankManagement_WPF.View.CancelLoanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankManagement_WPF.View"
        xmlns:vm="clr-namespace:BankManagement_WPF.ViewModel"
        mc:Ignorable="d"
        Background="LightCyan"
        Title="" Height="130" Width="450" WindowStartupLocation="CenterScreen">


    
    <StackPanel
        HorizontalAlignment="Center">
        <Label
            Content="Changes will not be revert again"
            Style="{StaticResource generalLabelStyle}"
            Margin="5"
            FontSize="16"/>

        <Button
            Command="{Binding CancelLoanCommand}"
            
            Background="LightCyan"
            BorderThickness="0"
            Content="OK"
            FontSize="16"
            Foreground="Red"
            FontWeight="SemiBold"/>
        
    </StackPanel>
</Window>
